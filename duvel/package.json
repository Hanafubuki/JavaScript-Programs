{
  "name": "duvel",
  "version": "1.0.0",
  "description": "duvel website",
  "main": "index.js",
  "scripts": {
    "build-css-main": "node-sass --include-path scss scss/main.scss   public/css/main.css",
    "watch-css-main": "nodemon -e scss -x \"npm run build-css-main\"",
    "build-css-mobile": "node-sass --include-path scss scss/mobile.scss   public/css/mobile.css",
    "watch-css-mobile": "nodemon -e scss -x \"npm run build-css-mobile\"",
    "build-css-pc": "node-sass --include-path scss scss/pc.scss   public/css/pc.css",
    "watch-css-pc": "nodemon -e scss -x \"npm run build-css-pc\""
  },
  "author": "Michele Weber",
  "license": "ISC",
  "devDependencies": {
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.11"
  }
}
